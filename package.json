{
  "name": "offline-spy",
  "description": "A standalone social deduction game.",
  "private": true,
  "scripts": {
    "babel": "babel src -d build",
    "favicon-generate": "real-favicon generate faviconDescription.json build/faviconData.json dist",
    "favicon-inject": "real-favicon inject build/faviconData.json build src/index.html",
    "favicon-check": "real-favicon check-for-update --fail-on-update build/faviconData.json",
    "html-minifier": "html-minifier build/bundled.html -o dist/index.html --collapse-whitespace --remove-comments --use-short-doctype --minify-css true --minify-js true",
    "marked": "marked -o build/rules.html -i src/rules.md && marked -o build/footer.html -i src/footer.md --mangle",
    "qrcode": "qrcode -o dist/qr.svg https://spy.verybadfrags.com",
    "sass": "node-sass --no-source-map src/style.scss build/style.css --output-style compressed",
    "test": "npm run favicon-check"
  },
  "author": "VeryBadFrags",
  "dependencies": {
    "@babel/cli": "^7.12.1",
    "@babel/core": "^7.12.3",
    "@babel/preset-env": "^7.12.1",
    "cli-real-favicon": "0.0.8",
    "html-minifier": "^4.0.0",
    "marked": "^1.2.2",
    "node-sass": "^4.14.1",
    "qrcode": "^1.4.4"
  }
}
