<div id="gameWindow" class="card bg-light" style="display: none">
  <div>
    Game Fingerprint <span id="fingerprint-container" class="large"></span>
  </div>
  <br />
  <div>
    <strong id="playerid"></strong>
  </div>
  <br />
  <div>🔍 First question: <span id="firstPlayer"></span></div>
  <br />
  <div id="timer"></div>
  <div>
    <button id="secret-block-button" class="btn btn-outline">
      👓 Show/Hide
    </button>
  </div>
  <div id="secretBlock" class="secret-card">
    <div id="spyBlock">You <strong>are</strong> the spy 🕵️</div>
    <div id="innocentBlock">
      You are <strong>not</strong> the spy 😇
    </div>
    <div>Location: <strong id="location"></strong></div>
  </div>
</div>

<script>
  import { showHide } from "../scripts/utils";

  document
    .getElementById("secret-block-button")!
    .addEventListener("click", () => showHide("secretBlock"));
</script>
